<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!DOCTYPE window SYSTEM "chrome://zotero/locale/preferences.dtd">
<dialog xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
	title="" buttons="cancel,accept"
	id="zotero-languageSwitchConfirmation"
    ondialogcancel="var doc = window.arguments[0];var zot = window.arguments[1];idx = window.arguments[2];var menu = doc.getElementById('locale-menulist');menu.selectedIndex = zot.LANGUAGE_INDEX[zot.locale];"
	ondialogaccept="var doc = window.arguments[0];var zot = window.arguments[1];zot.switchLocale(doc);">
    <vbox flex="1">
            <description maxwidth="250">
                Switching the language will restart Firefox. Some open
                windows may be lost. Click OK to proceed, Cancel to
                 abort.
            </description>
    </vbox>
</dialog>
